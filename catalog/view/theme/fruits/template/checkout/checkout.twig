                    }
                } else {
                    $.ajax({
                        url: 'index.php?route=checkout/confirm',

                        dataType: 'html',
                        complete: function() {
                        },
                        success: function(html) {
                            var method = $('button[name=payment_method]').val().split('.')[0];
                                console.log(method);
                             $.ajax({
                             url: 'index.php?route=extension/payment/'+method+'/confirm',
                             dataType: 'json',
                             beforeSend: function() {
