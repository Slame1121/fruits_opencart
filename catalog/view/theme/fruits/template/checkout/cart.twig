{{ header }}
<section class="breadcrumbs_block">
    <div class="container">
        <div class="breadcrumbs_block_container">
            <ul class="breadcrumbs_block_container__bread-crumbs">
                <li><a class="home" href="index.html">Главная</a></li>
                <li>Корзина покупок</li>
            </ul>
        </div>
    </div>
</section>
<section class="cart_block">
    <div class="container">
        <div class="cart_block_container">
            {% for product in products %}
            <div class="cart_block_container-item">
                <a class="cart_block_container-item-remove remove" href="#">×</a>
                <div class="cart_block_container-item-wrap">
                    <div class="cart_block_container-item-wrap__images">
                        <div class="cart_block_container-item-wrap__images__header-like">
                            <button class="cart_block_container-item-wrap__images__header-like__button" type="button"><img src="/catalog/view/theme/fruits/images/icon-liked.png"></button>
                        </div>
                        <a href="{{ product.href }}"><img src="{{ product.thumb }}"></a>
                    </div>
                    <div class="cart_block_container-item-wrap__text-wrap">
                        <div class="cart_block_container-item-wrap__text-wrap__text">
                            <h3>{{ product.name }}</h3>
                            <div class="cart_block_container-item-wrap__text-wrap__text__sku">Код {{ product.sku }}</div>
                            <div class="cart_block_container-item-wrap__text-wrap__text__raty raty"></div>
                            <div class="cart_block_container-item-wrap__text-wrap__text__rating">
                                <img src="/catalog/view/theme/fruits/images/icon-arrow.png" /> <span>17 отзывов</span>
                            </div>
                            <div class="cart_block_container-item-wrap__text-wrap__text__text-desc">
                                Паста белого винограда привер текста. Паста белого винограда привер текста. Паста белого винограда привер текста.
                            </div>
                            <div class="cart_block_container-item-wrap__text-wrap__text__text-view"><a href="#">Смотреть подробнее...</a></div>
                        </div>
                        <div class="cart_block_container-item-wrap__text-wrap__container">
                            <div id="number" class="cart_block_container-item-wrap__text-wrap__container_number">
                                <span class="cart_block_container-item-wrap__text-wrap__container_number_minus minus">-</span>
                                <input type="text" value="{{ product.quantity }}" size="5"/>
                                <span class="cart_block_container-item-wrap__text-wrap__container_number_plus plus">+</span>
                            </div>
                            <div class="cart_block_container-item-wrap__text-wrap__container_price">
                                <span>{{ product.total }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            <div class="cart_block_container-item__checkout">
                <div class="cart_block_container-item__checkout-total">
                    <span>Сумма к оплате: <strong>1299</strong> грн </span>
                </div>
                <div class="cart_block_container-item__checkout-addtocart">
                    <a href="#">
                        <span>Оформить заказ</span> <img src="/catalog/view/theme/fruits/images/icon-bag-big.png">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{{ footer }} 