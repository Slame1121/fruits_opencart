<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700" rel="stylesheet">
    <link rel="stylesheet" href="/catalog/view/theme/fruits/scss/css_plugin/labs.css" />
    <link rel="stylesheet" href="/catalog/view/theme/fruits/scss/css_plugin/remodal.css" />
    <link rel="stylesheet" href="/catalog/view/theme/fruits/scss/css_plugin/remodal-default-theme.css" />
    <link rel="stylesheet" href="/catalog/view/theme/fruits/scss/main.css" />
    <link rel="stylesheet" href="/catalog/view/theme/fruits/scss/css_plugin/sumoselect.css" />
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/owlcarousel/owl.carousel.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/owlcarousel/owl.navigation.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/jquery.raty-fa.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/remodal.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/jquery.slimscroll.min.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/sweetalert/sweetalert.min.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/components/jquery.paroller.min.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/main.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/pages/home.js"></script>
    <script type="text/javascript" src="/catalog/view/theme/fruits/js/media.js"></script>
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>

<section class="top_navbar">
    <div class="container">
        <div class="top_navbar-container">
            <div class="top_navbar-container__item">
                <div class="top_navbar-container__item-logo">
                    {% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="" /></a>{% else %}
                        <a href="/"><img src="/catalog/view/theme/fruits/images/logo.png" /></a>
                    {% endif %}
                </div>
                <div class="top_navbar-container__item-mobile-nav">
                    <div class="top_navbar-container__item-mobile-nav__button">
                        <button type="button"><i class="fa fa-3x fa-bars"></i></button>
                    </div>
                    <div class="top_navbar-container__item-mobile-nav__container">
                        <a href="#" class="top_navbar-container__item-mobile-nav__container-close">
                            <img src="/catalog/view/theme/fruits/images/icon-close.png" />
                        </a>
                        <ul class="top_navbar-container__item-menu__list">
                            {{ menu }}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="top_navbar-container__item">
                <div class="top_navbar-container__item-contacts">
                    <span><img src="/catalog/view/theme/fruits/images/icon-tel.png" /></span>
                    <a href="tel:{{ telephone }}">{{ telephone }}</a>
                    <a href="tel:{{ telephone_2 }}">{{ telephone_2 }}</a>
                </div>
                <div class="top_navbar-container__item-menu">
                    <ul class="top_navbar-container__item-menu__list">
                        {{ menu }}
                    </ul>
                    <div class="top_navbar-container__item-menu__search">
                        <img src="/catalog/view/theme/fruits/images/icon-search.png" />
                        <input type="text" value="" placeholder="Поиск..." />
                        <div class="top_navbar-container__item-menu__search-dropdown">
                            <ul>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="fixed_navbar">
    <div class="container">
        <div class="fixed_navbar-container">
            <div class="fixed_navbar-container-catalog">
                <button type="button">
                    Каталог товаров
                </button>
                <div class="fixed_navbar-container-catalog__dropdown">
                    {{ category_catalog }}
                </div>
            </div>
            <div class="fixed_navbar-container-cart">
                {{ cart }}

                <div class="fixed_navbar-container-cart__like">
                    <a {% if not logged %}data-remodal-target="login-modal"  href="#" {% else %}href="{{ wishlist }}"{% endif %}><img src="/catalog/view/theme/fruits/images/icon-like.png" /> <span>{{ text_wishlist }}</span></a>
                </div>
                <div class="fixed_navbar-container-cart__account">
                    <div class="fixed_navbar-container-cart__account-navbar dropdown">
                        <div class="dropdown-header">
                            <a {% if not logged %}data-remodal-target="login-modal"{% endif %} href=" {% if logged %}{{ account }}{% endif %}"> <img src="/catalog/view/theme/fruits/images/icon-user.png" /> <p>Личный кабинет</p></a>
                        </div>
                        <div style="display: none" class="dropdown-content">
                            <ul class="fixed_navbar-container-cart__account-navbar__items">
                                <li><a href="#login-modal">Войти</a></li>
                                <li><a href="#">Зарегистрироваться</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>