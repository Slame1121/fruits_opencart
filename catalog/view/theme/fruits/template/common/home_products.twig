                                    </div>
                                    <div class="product_list_container-content__items-container__content">
                                        <div class="product_list_container-content__items-container__content-price">
                                            <div class="product_list_container-content__items-container__content-price__item">
                                                {% if product.special > 0 %}
                                                    <p class="old_price">
                                                        {{ product.price }}
                                                    </p>
                                                    <p>{{ product.special_price }}</p>
                                                {% else %}
                                                    <p>{{ product.price }}</p>
                                                {% endif %}
                                            </div>
                                            <div class="product_list_container-content__items-container__content-price__item">
                                                <div class="raty"></div>
                                                <div class="product_list_container-content__items-container__content-price__item-rating">
                                                    <img src="/catalog/view/theme/fruits/images/icon-arrow.png" /> <span>{{ product.reviews }} отзыва</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="product_list_container-content__items-container__content-addtocart">
                                            <a href="#" class="button-add-to-cart" data-product-id="{{ product.product_id }}">
                                                <span>В корзину</span> <img src="/catalog/view/theme/fruits/images/icon-bag-big.png" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>