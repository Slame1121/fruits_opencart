<div class="profile_data_tabs-container__item-orders">
    {% if orders %}
    {% for order in orders %}
    <div class="profile_data_tabs-container__item-orders__item">
        <div class="profile_data_tabs-container__item-orders__item-container">
            <div class="profile_data_tabs-container__item-orders__item-container__order">
                <div class="profile_data_tabs-container__item-orders__item-container__order-arrow">

                </div>
                <div class="profile_data_tabs-container__item-orders__item-container__order-number">
                    №{{ order.order_id }}
                </div>
                <div class="profile_data_tabs-container__item-orders__item-container__order-date">
                    {{ order.date_added }}
                </div>
                <div class="profile_data_tabs-container__item-orders__item-container__order-total">
                    {{ order.total }}
                </div>
                <div class="profile_data_tabs-container__item-orders__item-container__order-status success">
                    {{ order.status }}
                </div>
            </div>
            <div class="profile_data_tabs-container__item-orders__item-container__dropdown">
                {% for product in order.order_products %}
                    <div class="profile_data_tabs-container__item-orders__item-container__dropdown-product">
                        <div class="profile_data_tabs-container__item-orders__item-container__dropdown-product__thumb">
                            <img src="{{ product.thumb }}" />
                        </div>
                        <div class="profile_data_tabs-container__item-orders__item-container__dropdown-product__description">
                            <p class="title">{{ product.name }}</p>
                            {% for option in product.option %} <br />
                                <p> - {{ option.name }}: {{ option.value }}</p> <br />{% endfor %}
                        </div>
                        <div class="profile_data_tabs-container__item-orders__item-container__dropdown-product__price">
                            <p>{{ product.total }}</p>
                        </div>
                        <div class="profile_data_tabs-container__item-orders__item-container__dropdown-product__quantity">
                            <p>{{ product.quantity }} шт</p>
                        </div>
                    </div>
                {% endfor %}
                <div class="profile_data_tabs-container__item-orders__item-container__dropdown-total">
                    <p>Итого к оплате:  <b>{{ order.products }}</b></p>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% else %}
        <p>{{ text_empty }}</p>
    {% endif %}
</div>